  {
    "tool_config_id": "config_search_knowledge_base",
    "base_tool_id": "tool_base_rag",
    "name": "search_knowledge_base",
    "description": "Search the knowledge base for relevant documents using semantic similarity",
    "tool_type": "rag",
    "is_active": true,
    "input_schema": {
      "type": "object",
      "properties": {
        "query": {
          "type": "string",
